<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cluster.entity">
    <class name="Engine" table="engine_info">
        <id name="engineID" column="engine_id" type="java.lang.String">
                <generator class="assigned"/>
        </id>
        <property name="password" column="password" type="java.lang.String"/>
        <property name="lastHeartbeatTime" column="last_heartbeat_time" type="java.util.Date" />
        <property name="lastLogineTime" column="last_login_time" type="java.util.Date"/>
        <one-to-one name="engineRole" constrained="true" cascade="none"/>
        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">
                    cluster.entity.EngineStatus
                </param>
            </type>
        </property>

    </class>
</hibernate-mapping>