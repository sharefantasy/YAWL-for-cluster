<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cluster.entity">
    <class name="EngineRole" table="engine_role">
        <id name="role" column="engine_id" type="java.lang.String">
            <generator class="assigned"/>
        </id>
        <many-to-one name="host" cascade="save-update"/>
        <many-to-one name="tenant" cascade="all"/>
        <one-to-one name="engine" constrained="true" cascade="save-update"/>
    </class>
</hibernate-mapping>